@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h1 class="display-1">Reauthentication demo</h1>
</div>

<div class="text-center mb-5">
    <div>
        <textarea class="form-control mb-2" disabled>
            @Model.Message
        </textarea>
        <div class="row">
            <div class="col-6">
                <form asp-controller="Home" asp-action="Simple" method="post">
                    <button type="submit" class="btn btn-secondary">Retrieve Simple-Auth Message</button>
                </form>
            </div>

            <div class="col-6">
                <form asp-controller="Home" asp-action="ReAuth" method="post">
                    <button type="submit" class="btn btn-primary">Retrieve Re-Auth Message</button>
                </form>
            </div>
        </div>
    </div>
</div>
